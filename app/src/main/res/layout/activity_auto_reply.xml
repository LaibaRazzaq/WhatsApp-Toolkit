<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10sp"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:background="@drawable/ic_shap">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="35sp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_whatsaap" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Whatsapp"
                    android:paddingLeft="10dp"
                    style="@style/headerText"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/whatsClick"
                    android:layout_height="wrap_content">
                    <Switch
                        android:id="@+id/WASwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtText"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"

                        android:text=""
                        android:textOn=""
                        android:textOff=""
                        style="@style/headerText"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <ImageView

                    android:layout_width="35sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="35sp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_whatsapp_business" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Whatsapp Business"
                    android:paddingLeft="10dp"
                    style="@style/headerText"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/busiClick"
                    android:layout_height="wrap_content">
                    <Switch
                        android:id="@+id/WBSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtText"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:text=""
                        android:textOn=""
                        android:textOff=""
                        style="@style/headerText"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20sp"
            android:background="@drawable/ic_shap">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Auto Reply"
                android:paddingLeft="20dp"
                style="@style/headerText"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"

                />
            <Switch
                android:id="@+id/msgSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtText"
                android:padding="20sp"
                android:text=""
                android:textOn=""
                android:textOff=""
                style="@style/headerText"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:padding="2dp"
            android:visibility="gone"
            android:id="@+id/adLayout"
            android:background="@drawable/ads_border"

            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">


        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:visibility="gone"

            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="MEDIUM_RECTANGLE"
            ads:adUnitId="@string/admobe_banner_auto_reply">
        </com.google.android.gms.ads.AdView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearAutoTxtOn"
            android:layout_width="match_parent"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/ic_shap"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/autoReplyTextSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtText"
                    android:background="@drawable/round_border_design"
                    android:paddingStart="20sp"
                    android:visibility="gone"
                    android:paddingTop="10sp"
                    android:paddingEnd="20sp"
                    android:paddingBottom="10sp"
                    android:text="Auto reply text"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto Reply"
                    style="@style/headerText"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="6dp"
                    />
                <TextView
                    android:id="@+id/txtAutoReply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto Reply"
                    android:layout_marginBottom="15dp"
                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:background="@drawable/pencil" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_border_design"
            android:elevation="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20sp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Select Your Text"
                    android:textColor="@color/black"
                    style="@style/headerText"
                    />

                <ImageView
                    android:id="@+id/imgMsgClear"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"

                    android:background="?android:attr/selectableItemBackground"

                    android:src="@drawable/ic_refresh" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/autoRecycleview"
                android:layout_width="match_parent"
                android:nestedScrollingEnabled="false"
                android:layout_height="wrap_content"
                tools:listitem="@layout/auto_reply_text_design"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</layout>
