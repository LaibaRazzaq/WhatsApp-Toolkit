<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#e3e3e3">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/green"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:elevation="4dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:elevation="4dp"
        android:id="@+id/setting"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/l"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/clip_circle"
        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/guideline2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="8dp"
            android:text="All Tools"
            android:textColor="@color/green"
            android:textSize="18sp"

            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/l">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"


            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="8dp"

                android:layout_marginVertical="4dp"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/whatsAppStatus"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/status"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Status Saver"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/whatsAppBusniesStatus"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/status"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Status\nBusiness"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="8dp"

                android:layout_marginVertical="4dp"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/directChat"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/outline_chat_24"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Direct Chat"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/whatsappWeb"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_document_scanner_24"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Whatscan"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>



            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:id="@+id/adView"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginVertical="16dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="8dp"

                android:layout_marginVertical="4dp"
                android:layout_height="120dp">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/whatsappCleaner"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/cleaner"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Cleaner"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/businerCleaner"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/cleaner"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Business Cleaner"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="8dp"


                android:layout_marginVertical="4dp"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/autoReply"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/auto_reply"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Auto Reply"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/customChat"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/outline_chat_24"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Custom Chat"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="8dp"


                android:layout_marginVertical="4dp"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/gallery"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_gallery"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="14sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Gallery"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:elevation="4dp"
                    android:id="@+id/share"
                    android:layout_marginHorizontal="4dp"
                    android:background="@drawable/bg_rectangle"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_share"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:text="Share"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>